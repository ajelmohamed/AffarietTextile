{% include 'admin/admin.html.twig' %}
<br><br><br>
<div class="form-control"
style="width: 50%; margin-left: 25%; padding-bottom: 50px; float: left; margin-bottom: 100px; margin-top: 15px">
<h2 class="page-header" style="text-align: center;">Modifier catégorie</h2>
<br>
{{ form_start(form) }}
{{ form_row(form.nomCategorie) }}


    <div style="float: left; margin-top: 45px;">
     <label for="appbundle_categorie_image" class="btn btn-primary" style="margin-top:42px; margin-left: 30px">Modifier image</label>
    {{ form_widget(form.image) }}
 </div>
 <input type="hidden" id="changed" name="changed" value="false">

<div style="margin-top: 10px;">
    <img id="preview" src="{{ asset('uploads/categories/' ~ categorie.image.filename ) }}"
    style="width: 200px; height: 200px; margin-left: 165px;"/>
</div>


<div class="input_sousCategories">
   <p>Sous catégories :</p>
   <input type="button" class="btn btn-primary add_field_button" style="width: 30%; margin-left:70%; margin-bottom: 15px" value="Ajouter sous catégorie">
   {% for sousCategorie in sousCategories %}
   <div style="margin-bottom: 15px">
      <input type="text" class="form-control" id="sousCategorie" name="sousCategorie[]" style="width:94%; float:left; margin-bottom: 15px" value="{{ sousCategorie.nomSousCategorie }}">
      <a href="#" class="btn btn-danger remove_field">x</a>
  </div>
  {% endfor %}
</div>

{{ form_row(form.valider) }}
{{ form_end(form) }}
</div>

<br>
<br>
<br>
<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#preview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);

            var fileSize = input.files[0].size;
            if(fileSize>2097152){
                alert('Le fichier est trop volumineux. Sa taille ne doit pas dépasser 2 MB.');
                document.getElementById("appbundle_categorie_image").value = "";
                hideImage();
            }
        } else {
            hideImage();
        }
    }

    function hideImage() {
        $('#preview').attr('src', "{{ asset('images/categorie.png') }}");
    }

    $("#appbundle_categorie_image").change(function () {
        readURL(this);
    });


    $(document).ready(function() {
    var max_fields      = 30; //maximum input boxes allowed
    var wrapper         = $(".input_sousCategories"); //Fields wrapper
    var add_button      = $(".add_field_button"); //Add button ID
    
    var x = 1; //initlal text box count
    $(add_button).click(function(e){ //on add input button click
        e.preventDefault();
        if(x < max_fields){ //max input box allowed
            x++; //text box increment
            $(wrapper).append('<div style="margin-bottom: 15px"><input type="text" class="form-control" id="sousCategorie" name="sousCategorie[]" style="width:94%; float:left; margin-bottom: 15px"><a href="#" class="btn btn-danger remove_field">x</a></div>'); //add input box
        }
    });
    
    $(wrapper).on("click",".remove_field", function(e){ //user click on remove text
        e.preventDefault(); $(this).parent('div').remove(); x--;
    })
});

        $('#appbundle_categorie_image').click(function() {
        hideImage();
        document.getElementById('changed').value="true";   
    });

</script>